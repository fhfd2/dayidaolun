.container {
  display: flex;
  height: 100%;
  flex-direction: column;
  overflow: hidden;
  align-items: center;
  font-weight: bold;
}
.a{
  color: darkmagenta;
  border-radius: 40%; 
  box-shadow:5px 5px  6px 0px rgba(12, 10, 10, 0.466);
}
.choice{
  margin-top: 30px;
}
.button-sp-area{
  margin: 0 auto;
  width: 60%;
  border-radius: 40%; 
  margin-top: 10px;
 }
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.button{
  margin-bottom: 5px;
  margin-top: 10px;
  border-radius: 30%; 
  color: darkmagenta;
  border-radius: 40%; 
  box-shadow:5px 5px  6px 0px rgba(12, 10, 10, 0.466);
}

.timer_main {
  position: relative;
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  margin-top: -45px;
  text-align: center;

  font-family: 微软雅黑;
  font-weight: bold;
  border-radius: 100%; 
}

.timer_time {
  font-size: 88px;
  color:rgb(2, 3, 34);
  font-weight: bold;
  transition: font-size .3s;
  font-family: 微软雅黑;
  margin-top: 30px;
}
.sport{
  color:rgb(43, 46, 92);
  margin-top: 18px;
}
.timer_footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 20px;
margin-top: 20px;
  width: 80%;
 
}

.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 20px;
  color: rgb(60, 41, 165);
  width: 80px;
  height: 80px;
  border-radius: 100%; 
  background-color: #279dec2a;
  box-shadow:5px 5px  6px 0px rgba(245, 229, 8, 0.151);
  font-weight: bold;
  margin: 0 auto;
}






